@model IEnumerable<AppUser>
@{
    ViewBag.Title = "Quản lý tài khoản";
}

<div style="margin-top: 1em" class="col-md-6">
    <div class="bg-primary panel-body"><h3><b>TÀI KHOẢN NGƯỜI DÙNG</b></h3></div>

    <div class="text-danger" asp-validation-summary="ModelOnly"></div>

    <table class="table table-bordered">
        <tr><th>Tên</th><th>Email</th><th></th></tr>
        @if (Model.Count() == 0)
        {
            <tr><td colspan="3" class="text-center">Không có tài khoản nào!</td></tr>
        }
        else
        {
            foreach (AppUser user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        <form asp-action="DeleteAccount" asp-route-id="@user.Id" method="post">
                            <a class="btn btn-sm btn-primary" asp-action="EditAccount" asp-route-id="@user.Id">
                                Sửa
                            </a>
                            <button role="button" type="submit"
                                    class="btn btn-sm btn-danger">
                                Xóa
                            </button>
                        </form>

                    </td>
                </tr>
            }
        }
    </table>
    <div style="margin-bottom: 1em;"><a class="btn btn-primary" asp-action="Register">Tạo tài khoản</a></div>
</div>