                            <label asp-for="RememberMe">
                                <input asp-for="RememberMe"/>
                                @Html.DisplayNameFor(m => m.RememberMe)
                            </label>
                        </div>
                    </div>
                </div>*@
                <div class="form-group col-md-12">
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-default">Đăng nhập</button>
                    </div>
                    <div class="col-md-4">
                        <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" class="btn btn-primary">Đăng ký</a>
                    </div>
                    <div class="col-md-4">
                        <a asp-action="ForgotPassword" asp-route-returnurl="@ViewData["ReturnUrl"]" class="btn btn-danger">Quên mật khẩu?</a>
                    </div>
                </div>                
            </form>
        </section>
    </div>
