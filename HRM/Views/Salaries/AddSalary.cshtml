@model HRM.Models.Salary

@{
    ViewData["Title"] = "Tính lương";
}

<h2>Create</h2>

<form asp-action="AddSalary" asp-route-employeeID="@Model.Employee.EmployeeID">
    <div class="form-horizontal">
        <h4>Salary</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="RecordDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="RecordDate" class="form-control" />
                <span asp-validation-for="RecordDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Earned" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Earned" class="form-control" />
                <span asp-validation-for="Earned" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
