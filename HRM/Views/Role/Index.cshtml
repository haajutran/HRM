@model IEnumerable<IdentityRole>

@{ 
    ViewBag.Title = "Quản lý quyền";
}

<div class="col-lg-6">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <div class="card">
        <div class="header">
            <h4 class="title">Quyền</h4>
        </div>
        <div class="content">
            <input type="hidden" id="EmployeeID" name="EmployeeID" value="">
            <ul class="list-unstyled team-members">

                @foreach (var role in Model)
                {
                    <li>
                        <div class="row">
                            <div class="col-xs-8" style="padding-top: 0.5em">
                                <p>@role.Name</p>
                            </div>
                            <div class="col-xs-4">
                                <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                                    <a class="btn btn-primary" asp-action="Edit"
                                       asp-route-id="@role.Id">Sửa</a>
                                    <button role="button" class="btn btn-danger" id="myBtn">Xóa</button>
                                </form>
                                <br>
                            </div>
                        </div>
                    </li>
                }
            </ul>
            <div style="margin: auto 0; width: 10%">
                <a class="btn btn-success" asp-action="Create">Tạo quyền</a>
            </div>
        </div>

    </div>
</div>