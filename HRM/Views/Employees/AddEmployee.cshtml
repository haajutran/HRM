@model Employee

@{
    ViewBag.Title = "Thêm nhân viên";
}

<form asp-action="AddEmployee" method="post">
    <div class="row">
        <div class="col-lg-4 col-md-5">
            <div class="card card-user">
                <div class="image">
                    <img src="~/images/wall.jpg" alt="...">
                </div>
                <div class="content">
                    <div class="author">
                        <img class="avatar border-white" src="~/images/13528872_930129437096013_535751867252842230_n.jpg" alt="...">
                        <h4 class="title">
                            <span>Mr. Simple</span>
                            <br>
                            @*<a href="#"><small></small></a>*@
                        </h4>
                    </div>
                    <p class="description text-center">
                        "Hậu là một người đẹp trai <br>
                        Tốt bụng và hay giúp đỡ người khác <br>
                        Hãy như Hậu!"
                    </p>
                </div>
                <hr>
                <div class="text-center">
                    <div class="row">
                        <div class="col-md-3 col-md-offset-1">
                            <h5>12<br><small>Files</small></h5>
                        </div>
                        <div class="col-md-4">
                            <h5>2GB<br><small>Used</small></h5>
                        </div>
                        <div class="col-md-3">
                            <h5>24,6$<br><small>Spent</small></h5>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="header">
                    <h4 class="title">Team Members</h4>
                </div>
                <div class="content">
                    <ul class="list-unstyled team-members">
                        <li>
                            <div class="row">
                                <div class="col-xs-3">
                                    <div class="avatar">
                                        <img src="~/assets/img/faces/face-0.jpg" alt="Circle Image" class="img-circle img-no-padding img-responsive">
                                    </div>
                                </div>
                                <div class="col-xs-6">
                                    DJ Khaled
                                    <br>
                                    <span class="text-muted"><small>Offline</small></span>
                                </div>

                                <div class="col-xs-3 text-right">
                                    <btn class="btn btn-sm btn-success btn-icon"><i class="fa fa-envelope"></i></btn>
                                </div>
                            </div>
                        </li>
                        <li>
                            <div class="row">
                                <div class="col-xs-3">
                                    <div class="avatar">
                                        <img src="~/assets/img/faces/face-1.jpg" alt="Circle Image" class="img-circle img-no-padding img-responsive">
                                    </div>
                                </div>
                                <div class="col-xs-6">
                                    Creative Tim
                                    <br>
                                    <span class="text-success"><small>Available</small></span>
                                </div>

                                <div class="col-xs-3 text-right">
                                    <btn class="btn btn-sm btn-success btn-icon"><i class="fa fa-envelope"></i></btn>
                                </div>
                            </div>
                        </li>
                        <li>
                            <div class="row">
                                <div class="col-xs-3">
                                    <div class="avatar">
                                        <img src="~/assets/img/faces/face-3.jpg" alt="Circle Image" class="img-circle img-no-padding img-responsive">
                                    </div>
                                </div>
                                <div class="col-xs-6">
                                    Flume
                                    <br>
                                    <span class="text-danger"><small>Busy</small></span>
                                </div>

                                <div class="col-xs-3 text-right">
                                    <btn class="btn btn-sm btn-success btn-icon"><i class="fa fa-envelope"></i></btn>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-lg-8 col-md-7">
            <div class="card">
                <div class="header">
                    <h4 class="title">Điền đầy đủ thông tin để thêm Sinh viên</h4>
                </div>
                <div class="content">

                    <input type="hidden" asp-for="EmployeeID" />
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Công ty</label>
                                <input type="text" class="form-control border-input" disabled="" placeholder="Company" value="TNHH Tứ thành viên Thánh Hậu Hồn Nhiên">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>MSNV</label>
                                <input type="text" asp-for="EmployeeCode" class="form-control border-input" placeholder="Mã số nhân viên">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Họ & Tên</label>
                                <input type="text" asp-for="FullName" class="form-control border-input" placeholder="Họ và Tên">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Email</label>
                                <input type="email" asp-for="Email" class="form-control border-input" placeholder="Email">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Điện thoại</label>
                                <input type="tel" asp-for="PhoneNumber" class="form-control border-input" placeholder="Số điện thoại">
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="form-group">
                                <label>Giới tính</label>
                                @*<input type="text" class="form-control border-input" placeholder="Quốc gia" asp-for="@Model.Gender">*@
                                <div>
                                    <div class="btn-group col-md-12" data-toggle="buttons">
                                        <label class="btn active col-md-6" style="border: 0.5px solid #808080;">
                                            <input type="radio" value="Nam" id="nam" name="gender" checked><span><i class="fa fa-male"></i> Nam</span>
                                        </label>
                                        <label class="btn col-md-6" style="border: 0.5px solid #808080">
                                            <input type="radio" value="Nữ" id="nu" name="gender"><span><i class="fa fa-female"></i> Nữ</span>
                                        </label>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="row">
                        <div class="col-md-8">
                            <div class="form-group">
                                <label>Tạm trú</label>
                                <input type="text" asp-for="TempAddress" class="form-control border-input" placeholder="Địa chỉ tạm trú">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Địa chỉ</label>
                                <input type="text" class="form-control border-input" placeholder="Địa chỉ" asp-for="@Model.Address">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Quốc gia</label>
                                <input type="text" class="form-control border-input" value="Việt Nam" readonly>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Thành phố</label>
                                <input type="text" class="form-control border-input" placeholder="Thành phố" asp-for="@Model.City">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Tỉnh</label>
                                <input type="text" class="form-control border-input" asp-for="@Model.PlaceOfProvide" placeholder="Tỉnh" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Quê quán</label>
                                <input type="text" class="form-control border-input" placeholder="Quốc gia" asp-for="@Model.HomeTown">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>CMND</label>
                                <input type="text" class="form-control border-input" placeholder="Thành phố" asp-for="@Model.CitizenID">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Ngày sinh</label>
                                <input type="date" class="form-control border-input" asp-for="@Model.DateOfBirth" />
                            </div>
                        </div>
                    </div>



                    <div class="row">
                        <div class="col-md-12">
                            @*<div class="form-group">
                                    <label>About Me</label>
                                    <textarea rows="5" class="form-control border-input" placeholder="Here can be your description" value="Mike">
                                    @foreach(var department in Model.Departments)
                                    {
                                        @department.DepartmentName
                                    }
                                    </textarea>
                                </div>*@
                            <div class="form-group">
                                <label>Phòng ban</label>
                                <select class="form-control border-input" asp-for="DepartmentCode" asp-items="ViewBag.Departments">
                                    <option value="">-- Chọn phòng ban --</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-info btn-fill btn-wd">Lưu thay đổi</button>
                    </div>
                    <div class="clearfix"></div>

                </div>
            </div>
        </div>


    </div>

</form>