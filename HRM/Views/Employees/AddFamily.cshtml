@model HRM.Models.FamilyRelation

@{  
    var a = Model;
    ViewData["Title"] = "Create";
}


<div class="container">

    <form asp-action="AddFamily" method="post">

        <h3 style="margin-left: -2em" class="input-form-title">THÊM NGƯỜI THÂN TRONG GIA ĐÌNH</h3>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="EmployeeId" class="form-control" />
        <div class="input-form">
            <div class="form-group">
                <label asp-for="Name" class="col-md-12 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="DateOfBirth" class="col-md-12 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="DateOfBirth" class="form-control" />
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Relation" class="col-md-12 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Relation" class="form-control" />
                    <span asp-validation-for="Relation" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Occupation" class="col-md-12 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Occupation" class="form-control" />
                    <span asp-validation-for="Occupation" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="col-md-12 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="WorkPlace" class="col-md-12 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="WorkPlace" class="form-control" />
                    <span asp-validation-for="WorkPlace" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="col-md-12 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="col-md-12 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div>
                <div class="col-md-12" style="margin-top: 1em;">
                    <button type="submit" role="button" value="AddFamily" class="btn btn-success">Lưu</button>
                    <a asp-action="Index" class="btn btn-primary">Tất cả thân nhân</a>           
                    <a asp-controller="Employees" asp-action="EditEmployee" asp-route-employeeID="@Model.EmployeeId" class="btn btn-warning">Hủy</a>
                </div>  
            </div>
        </div>
    </form>
</div>
