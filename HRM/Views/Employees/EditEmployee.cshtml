@model Employee

@{ 
    ViewBag.Title = "Xem và Chỉnh sửa thông tin nhân viên";
}

<form asp-action="EditEmployee" asp-route-employeeID="@Model.EmployeeID" method="post">
    <div class="row">
        <div class="col-lg-7">
            <div class="card card-user">
                <div class="image">
                    <img src="~/images/wall.jpg" alt="...">
                </div>
                <div class="content">
                    <div class="author">
                        <img class="avatar border-white" src="~/images/13528872_930129437096013_535751867252842230_n.jpg" alt="...">
                        <h4 class="title">
                            <span>@Model.FullName</span>
                            <br>
                            @*<a href="#"><small></small></a>*@
                        </h4>
                    </div>    
                    <hr />
                    <div>
                        <input type="hidden" asp-for="EmployeeID" />
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label>Công ty</label>
                                    <input type="text" class="form-control border-input" disabled="" placeholder="Company" value="TNHH Tứ thành viên Thánh Hậu Hồn Nhiên">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label>Họ & Tên</label>
                                    <input type="text" asp-for="FullName" class="form-control border-input" placeholder="Họ và Tên">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label>Email</label>
                                    <input type="email" asp-for="Email" class="form-control border-input" placeholder="Email">
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label>Điện thoại</label>
                                    <input type="tel" asp-for="PhoneNumber" class="form-control border-input" placeholder="Số điện thoại">
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label>CMND</label>
                                    <input type="text" class="form-control border-input" placeholder="Thành phố" asp-for="@Model.CitizenID">
                                </div>
                            </div>
                        </div>


                        <div class="row">
                            <div class="col-lg-8">
                                <div class="form-group">
                                    <label>Tạm trú</label>
                                    <input type="text" asp-for="TempAddress" class="form-control border-input" placeholder="Địa chỉ tạm trú">
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label>Địa chỉ</label>
                                    <input type="text" class="form-control border-input" placeholder="Địa chỉ" asp-for="@Model.Address">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label>Quốc gia</label>
                                    <input type="text" class="form-control border-input" value="Việt Nam" readonly>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label>Thành phố</label>
                                    <input type="text" class="form-control border-input" placeholder="Thành phố" asp-for="@Model.City">
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label>Tỉnh</label>
                                    <input type="text" class="form-control border-input" asp-for="@Model.PlaceOfProvide" placeholder="Tỉnh" />
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label>Quê quán</label>
                                    <input type="text" class="form-control border-input" placeholder="Quốc gia" asp-for="@Model.HomeTown">
                                </div>
                            </div>

                            <div class="col-lg-4 col-md-12">
                                <div class="form-group">
                                    <label>Giới tính</label>
                                    @if (Model.Gender == "Nam")
                                    {
                                        <div>
                                            <div class="btn-group" data-toggle="buttons">
                                                <label class="btn active col-lg-6" style="border: 0.5px solid #808080;">
                                                    <input type="radio" value="Nam" id="nam" name="gender" checked><span><i class="fa fa-male"></i></span>
                                                </label>
                                                <label class="btn col-lg-6" style="border: 0.5px solid #808080">
                                                    <input type="radio" value="Nữ" id="nu" name="gender"><span><i class="fa fa-female"></i></span>
                                                </label>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div>
                                            <div class="btn-group" data-toggle="buttons">
                                                <label class="btn col-lg-6" style="border: 0.5px solid #808080;">
                                                    <input type="radio" value="Nam" id="nam" name="gender"><span><i class="fa fa-male"></i></span>
                                                </label>
                                                <label class="btn active col-lg-6" style="border: 0.5px solid #808080">
                                                    <input type="radio" value="Nữ" id="nu" name="gender" checked><span><i class="fa fa-female"></i></span>
                                                </label>
                                            </div>
                                        </div>
                                    }

                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label>Ngày sinh</label>
                                    <input type="date" class="form-control border-input" asp-for="@Model.DateOfBirth" />
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-12">
                                @*<div class="form-group">
                        <label>About Me</label>
                        <textarea rows="5" class="form-control border-input" placeholder="Here can be your description" value="Mike">
                        @foreach(var department in Model.Departments)
                        {
                            @department.DepartmentName
                        }
                        </textarea>
                    </div>*@
                                <div class="form-group">
                                    <label>Phòng ban</label>
                                    <select class="form-control border-input" asp-for="DepartmentCode" asp-items="ViewBag.Departments">
                                        <option value="">-- Chọn phòng ban --</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-info btn-fill btn-wd">Lưu thay đổi</button>
                        </div>
                        <div class="clearfix"></div>

                    </div>
                </div>
                <hr>
              
            </div>

            <div class="card">
                <div class="header">
                    <h4 class="title col-lg-6"> Thân Nhân</h4>
                    <div col-lg-2>
                        <a class="btn btn-success pull-right" style="width: 5em" asp-action="AddFamily" asp-route-employeeID="@Model.EmployeeID"><i class="fa fa-plus"></i></a>
                    </div>
                </div>
                <div class="card-content table-responsive">
                    <table class="table-striped table-hover" style="width: 100%">
                        <thead>
                            <tr>
                                <th>Họ và Tên</th>
                                <th>Ngày sinh</th>
                                <th>Nghề nghiệp</th>
                                <th>Quan hệ</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.FamilyRelations != null)
                            {
                                foreach (var p in Model.FamilyRelations)
                                {
                            <tr>
                                <td><a asp-action="FamilyDetails" asp-route-id="@p.FamilyRelationId">@p.Name</a></td>
                                <td>@p.DateOfBirth</td>
                                <td>@p.Occupation</td>
                                <td>@p.Relation</td>
                                <td>
                                    <a class="btn btn-danger" style="width:100%" asp-action="DeleteFamily" asp-route-familyRelationID="@p.FamilyRelationId"><i class="fa fa-trash"></i></a>
                                </td>
                            </tr>
                                }
                            }
                            else
                            {
                            <tr>
                                <td colspan="7">Không có thân nhân</td>
                            </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-lg-5">
            <div class="card">               
                <div class="content">                         
                    <div class="content">
                        <input type="hidden" asp-for="EmployeeID" />   
                        <ul class="list-unstyled team-members">

                            <li>
                                <div class="row">
                                    <div class="col-xs-3" style="padding-top: 0.5em">
                                        <p class="pull-right">Mã số nhân viên</p>
                                    </div>
                                    <div class="col-xs-6">
                                        <input type="text" class="form-control border-input" disabled="" asp-for="EmployeeCode">
                                        <br>
                                    </div>
                                </div>
                            </li>

                            <li>
                                <div class="row">
                                    <div class="col-xs-3" style="padding-top: 0.5em">
                                        <p class="pull-right">Phòng ban</p>
                                    </div>
                                    <div class="col-xs-6">
                                        <select class="form-control border-input" asp-for="DepartmentCode" asp-items="ViewBag.Departments">
                                            <option value="">-- Chọn phòng ban --</option>
                                        </select>
                                        <br>
                                    </div>
                                </div>
                            </li>
                            
                            <li>
                                <div class="row">
                                    <div class="col-xs-3" style="padding-top: 0.5em">
                                        <p class="pull-right">Ngày tham gia</p>
                                    </div>
                                    <div class="col-xs-6">
                                        <input type="date" class="form-control border-input" disabled="" asp-for="DateOfJoining">
                                        <br>
                                    </div>
                                </div>
                            </li>

                            <li>
                                <div class="row">
                                    <div class="col-xs-3" style="padding-top: 0.5em">
                                        <p class="pull-right">Ngày nghỉ</p>
                                    </div>
                                    <div class="col-xs-6">
                                        <input type="date" class="form-control border-input" disabled="" asp-for="ExitDate">
                                        <br>
                                    </div>
                                </div>
                            </li>

                        </ul>
                    </div>
                </div>
            </div>
        </div>

    </div>
</form>

