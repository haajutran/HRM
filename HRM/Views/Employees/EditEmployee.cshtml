                                            </label>
                                            <label class="btn col-md-6" style="border: 0.5px solid #808080">
                                                <input type="radio" value="Nữ" id="nu" name="gender"><span><i class="fa fa-female"></i> Nữ</span>
                                            </label>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div>
                                        <div class="btn-group col-md-12" data-toggle="buttons">
                                            <label class="btn col-md-6" style="border: 0.5px solid #808080;">
                                                <input type="radio" value="Nam" id="nam" name="gender"><span><i class="fa fa-male"></i> Nam</span>
                                            </label>
                                            <label class="btn active col-md-6" style="border: 0.5px solid #808080">
                                                <input type="radio" value="Nữ" id="nu" name="gender" checked><span><i class="fa fa-female"></i> Nữ</span>
                                            </label>
                                        </div>
                                    </div>
                                }

                            </div>
                        </div>
                    </div>


